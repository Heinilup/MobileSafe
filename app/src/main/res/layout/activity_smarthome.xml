<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TextView
        style="@style/TitleBarStyle"
        android:text="智能家居" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:text="卧室床头灯"
            android:textSize="20sp" />

        <Button
            android:id="@+id/btn_open1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="open"
            android:text="Open" />

        <Button
            android:id="@+id/btn_close1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="close"
            android:text="Close" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:text="闺女卧室灯"
            android:textSize="20sp" />

        <Button
            android:id="@+id/btn_open"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="open1"
            android:text="Open" />

        <Button
            android:id="@+id/btn_close"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="close1"
            android:text="Close" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:text="楼道灯"
            android:textSize="20sp" />

        <Button
            android:id="@+id/btn_open2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="open2"
            android:text="Open" />

        <Button
            android:id="@+id/btn_close2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="close2"
            android:text="Close" />
    </LinearLayout>

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="局域网控制开关" />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:text="局域网床头灯"
            android:textSize="20sp" />

        <Button
            android:id="@+id/btn_open_local_1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="open_local_1"
            android:text="Open" />

        <Button
            android:id="@+id/btn_close_local_1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="close_local_1"
            android:text="Close" />

        <ikabi.com.mobilesafe.view.SwitchToggleView
            android:id="@+id/stv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:text="闺女床灯"
            android:textSize="20sp" />

        <Button
            android:id="@+id/btn_open_local_2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="open_local_2"
            android:text="Open" />

        <Button
            android:id="@+id/btn_close_local_2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="close_local_2"
            android:text="Close" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="楼道灯"
            android:textSize="20sp"
            android:layout_marginTop="5dp"/>

        <Button
            android:onClick="open_local_3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Open"
            android:id="@+id/btn_open_local_3"/>
        <Button
            android:onClick="close_local_3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Close"
            android:id="@+id/btn_close_local_3"/>
    </LinearLayout>

</LinearLayout>